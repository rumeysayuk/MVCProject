@using Entities.Concrete

@model List<Entities.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered mt-5">
    <tr>
        <th>#</th>
        <th>Categori adi </th>
        <th>Tanım</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.Id</th>
    <td>@item.Name</td>
    <td>@item.Description</td>
    <td><a href="/AdminCategories/Update/@item.Id" class="btn btn-outline-success">Güncelle</a></td> 
    <td><a href="/AdminCategories/Delete/@item.Id" class="btn btn-outline-danger">Sil</a></td> 
    <td><a href="/AdminCategories/Headings/@item.Id" class="btn btn-outline-primary">Başlıklar</a></td> 
  

</tr>
    }
 
</table>
<br />
<a href="/AdminCategories/Add" class="btn btn-outline-primary">Add</a>

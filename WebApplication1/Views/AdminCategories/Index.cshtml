@using Entities.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered mt-5">
    <tr>
        <th>#</th>
        <th>Categori adi </th>
        @*<th>Başlık</th>*@
        <th>Tanım</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.Id</th>
    <td>@item.CategoryName</td>
    @*<td>@item.CategoryHeading</td>*@
    <td>@item.CategoryDescription</td>
    <td><a href="/AdminCategories/Update/@item.Id" class="btn btn-outline-success">Güncelle</a></td> 
    <td><a href="/AdminCategories/Delete/@item.Id" class="btn btn-outline-danger">Sil</a></td> 
    <td><a href="/AdminCategories/Delete/@item.Id" class="btn btn-outline-primary">Başlıklar</a></td> 
</tr>
    }
 
</table>
<br />

<a href="/AdminCategories/Add" class="btn btn-outline-primary">Add</a>

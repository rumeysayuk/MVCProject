@using Entities.Concrete
@model List<Category>
@{
    Layout = null;
}

<!DOCTYPE html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<table class="table table-bordered">
    <th>Id</th>
    <th>Kategori adi</th>
    <th>Kategori açıklaması</th>
    <th>Durum</th>
    @foreach(var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>@item.Description</td>
    <td><a href="/AdminCategories/Update/@item.Id" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/AdminCategories/Delete/@item.Id" class="btn btn-warning">Sil</a></td>


</tr>
    }
</table>
<br/>

<a href="/Categories/Add" class="btn btn-outline-primary">Add</a>

